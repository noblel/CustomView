<?xml version="1.0" encoding="utf-8"?>
<com.noblel.coolview.like.LikeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:inputType="number"
        android:id="@+id/set_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="设置"
        android:id="@+id/make_num"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />

    <Button
        android:text="点赞"
        android:id="@+id/like_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />

    <com.noblel.coolview.like.LikeNumView
        android:id="@+id/like_number_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:likeNum="2658" />
</com.noblel.coolview.like.LikeLayout>